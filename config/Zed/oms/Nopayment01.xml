<?xml version="1.0"?>
<statemachine
    xmlns="spryker:oms-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">
    <!-- Used as example XML for OMS implementation -->

    <process name="Nopayment01" main="true">

        <states>
            <state name="new" reserved="true" display="oms.state.new"/>
            <state name="waiting for payment" display="oms.state.payment-pending"/>
            <state name="payment done" display="oms.state.paid"/>
            <state name="underpaid" display="oms.state.underpaid"/>
            <state name="start shippment" display="oms.state.start-shippment"/>
            <state name="end shippment" display="oms.state.end-shippment"/>
            <state name="closed" display="oms.state.closed"/>
            <state name="returned" display="oms.state.returned"/>
            <state name="canceled" display="oms.state.canceled"/>
            <state name="invalid" display="oms.state.invalid"/>
        </states>

        <transitions>
            <transition happy="true">
                <source>new</source>
                <target>waiting for payment</target>
                <event>authorize</event>
            </transition>
            <transition>
                <source>new</source>
                <target>invalid</target>
                <event>authorize</event>
            </transition>
            <transition happy="true">
                <source>waiting for payment</source>
                <target>payment done</target>
                <event>paid</event>
            </transition>

            <transition happy="true">
                <source>waiting for payment</source>
                <target>underpaid</target>
                <event>paid</event>
            </transition>

            <transition>
                <source>underpaid</source>
                <target>waiting for payment</target>
                <event>forward</event>
            </transition>

            <transition>
                <source>waiting for payment</source>
                <target>canceled</target>
            </transition>
            <transition happy="true">
                <source>payment done</source>
                <target>start shippment</target>
                <event>pick</event>
            </transition>
            <transition happy="true">
                <source>start shippment</source>
                <target>end shippment</target>
                <event>ship</event>
            </transition>
            <transition happy="true">
                <source>end shippment</source>
                <target>closed</target>
                <event>close</event>
            </transition>
            <transition happy="true">
                <source>end shippment</source>
                <target>returned</target>
                <event>return</event>
            </transition>
        </transitions>

        <events>
            <event name="authorize" onEnter="true" manual="true"/>
            <event name="paid" manual="true" />
            <event name="pick" manual="true" />
            <event name="ship" manual="true" />
            <event name="forward" onEnter="true" />
            <event name="close" manual="true" />
            <event name="return" manual="true" />
        </events>

    </process>

</statemachine>
