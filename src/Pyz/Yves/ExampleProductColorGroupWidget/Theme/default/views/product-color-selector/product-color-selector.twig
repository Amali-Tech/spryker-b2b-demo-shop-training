{% extends template('widget') %}

{% define data = {
    idProductAbstract: _widget.idProductAbstract | default,
    items: _widget.productGroupItems | default([])
} %}

{% block body %}
    {% include molecule('color-selector', 'ExampleProductColorGroupWidget') with {
        class: 'text-left',
        data: {
            items: data.items,
        },
        attributes: {
            'target-image-container-class-name': 'js-product-color-group__image-' ~ data.idProductAbstract,
            'target-details-link-class-name': 'js-product-color-group__link-' ~ data.idProductAbstract,
        },
    } only %}
{% endblock %}
