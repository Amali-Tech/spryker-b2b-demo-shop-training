{% extends template('widget') %}

{% define data = {
    idProductAbstract: _widget.idProductAbstract | default,
    items: _widget.productGroupItems | default([])
} %}

{% block body %}
    {% include molecule('color-selector', 'ExampleProductColorGroupWidget') with {
        class: 'text-left',
        data: {
            items: data.items
        },
        attributes: {
            'target-image-selector': '.js-product-color-group__image-' ~ data.idProductAbstract ~ ' img',
            'target-url-selector': '.js-product-color-group__image-' ~ data.idProductAbstract,
        }
    } only %}
{% endblock %}
