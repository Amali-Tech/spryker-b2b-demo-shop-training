{% extends template('widget') %}

{% define data = {
    form: _widget.voucherForm,
    isQuoteEditable: _widget.isQuoteEditable
} %}

{% block body %}
    {% if data.isQuoteEditable %}
        {% include molecule('form') with {
            class: 'checkout-summary-dicount-voucher-form',
            data: {
                form: data.form,
                submit: {
                    enable: true,
                    text: 'cart.voucher.redeem' | trans,
                    class: 'button button--hollow-icon'
                }
            }
        } only %}
    {% endif %}
{% endblock %}
