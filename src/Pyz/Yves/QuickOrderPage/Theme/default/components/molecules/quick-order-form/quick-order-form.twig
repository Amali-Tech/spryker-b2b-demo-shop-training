{% extends model('component') %}

{% define config = {
    name: 'quick-order-form',
    tag: 'quick-order-form'
} %}

{% define data = {
    form: required,
    products: [],
    prices: [],
    additionalColumns: [],
    fileTemplateExtensions: [],
    textOrderForm: required,
    uploadOrderForm: required
} %}

{% block body %}
    {% include molecule('ajax-provider') with {
        class: config.jsName ~ '__provider ' ~ config.jsName ~ '__add-row-provider',
        attributes: {
            method: 'POST',
            url: url('quick-order/add-rows')
        }
    } only %}

    {% include molecule('ajax-provider') with {
        class: config.jsName ~ '__provider ' ~ config.jsName ~ '__remove-row-provider',
        attributes: {
            method: 'POST',
            url: url('quick-order/delete-row')
        }
    } only %}

    {% include molecule('ajax-loader') with {
        modifiers: ['big'],
        attributes: {
            'provider-selector': '.' ~ config.jsName ~ '__provider'
        }
    } only %}

    {% embed molecule('form') with {
        data: {
            form: data.form,
            products: data.products,
            prices: data.prices,
            fileTemplateExtensions: data.fileTemplateExtensions,
            options: {
                attr: {
                    class: config.jsName ~ '__form',
                    'enctype': 'multipart/form-data'
                }
            },
            textOrderForm: data.textOrderForm,
            uploadOrderForm: data.uploadOrderForm
        },
        embed: {
            name: config.name,
            jsName: config.jsName,
            additionalColumns: data.additionalColumns
        }
    } only %}
        {% block fieldset %}
            <div class="{{ config.name }}__fields grid">
                {% block fields %}
                <div class="{{ config.name }}__field col col--sm-12 col--md-9">
                    <div class="box">
                        <div class="{{embed.name}}__rows {{embed.jsName}}__rows">
                            {% include molecule('quick-order-rows', 'QuickOrderPage') with {
                                data: {
                                    rows: data.form.items,
                                    products: data.products,
                                    prices: data.prices,
                                    additionalColumns: embed.additionalColumns
                                }
                            } only %}
                        </div>
                    </div>
                </div>
                    <div class="{{ config.name }}__field col col--top col--sm-12 col--md-3">
                        <div class="box">
                            {% include molecule('quick-order-text-order-form', 'QuickOrderPage') with {
                                data: {
                                    textOrderForm: data.textOrderForm,
                                }
                            } only %}

                            <hr>

                            {% include molecule('quick-order-file-upload', 'QuickOrderPage') with {
                                data: {
                                    uploadOrderForm: data.uploadOrderForm,
                                    fileTemplateExtensions: data.fileTemplateExtensions
                                }
                            } only %}
                        </div>
                    </div>
                {% endblock %}
            </div>
        {% endblock %}

        {% block actions %}
            <div class="grid grid--wide grid--justify">
                <div class="col col--sm-12">
                    <div class="col col--sm-12 col--md-6 spacing-bottom spacing-bottom--big text-left">
                        <a href="#add-more" class="{{ embed.name }}__add-row-trigger {{ embed.jsName }}__add-row-trigger">
                            {{ 'quick-order.button.add-more-rows' | trans }}
                        </a>
                    </div>
                    <div class="col col--sm-12 col--md-6">
                        <div class="col col--sm-12 spacing-bottom spacing-bottom--big text-right">
                            <a href="{{ url('quick-order/clear-all-rows') }}"
                               class="{{ embed.name }}__clear-all-trigger">
                                {% include atom('icon') with {
                                    data: {
                                        name: 'delete'
                                    }
                                } only %}
                                {{ 'quick-order.button.clear-all-rows' | trans }}
                            </a>
                        </div>
                        {% if can("SeeAddToCartPermissionPlugin") %}
                            <div class="col col--sm-12 spacing-bottom spacing-bottom--big">
                                <button type="submit" name="addToCart" class="button button--expand button--big button--alert {{ embed.name }}__button">
                                    {% include atom('icon') with {
                                        modifiers: ['cart-plus'],
                                        data: {
                                            name: 'cart-plus'
                                        }
                                    } only %}
                                    {{ 'page.detail.add-to-cart' | trans }}
                                </button>
                            </div>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <div class="col col-sm--12 col--md-12 spacing-bottom spacing-bottom--big">
                                {% widget 'AddItemsToShoppingListWidget' only %}
                                {% endwidget %}
                            </div>
                        {% endif %}
                        <div class="col col--sm-12 spacing-bottom spacing-bottom--big is-hidden">
                            {% widget 'QuickOrderPageWidget' only %}{% endwidget %}
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
