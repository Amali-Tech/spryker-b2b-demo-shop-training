{% if chart is defined %}

    {% set chartType = 'pie' %}
    <script>/*<![CDATA[*/
        var chartData = [];
        var chartLayout = {{ chart.layout | json_encode() }};

        {% for trace in chart.data.traces %}
            {% set isPie = (trace.type == 'pie') %}
            {% set xLabels = isPie ? 'labels' : 'x' %}
            {% set yValues = isPie ? 'values' : 'y' %}
            chartData.push({
                name: '{{ trace.name }}',
                type: '{{ trace.type | default('bar') }}',
                {{ xLabels }}: {{ trace.labels | json_encode | raw }},
                {{ yValues }}: {{ trace.values | json_encode | raw }}
            });
        {% endfor %}
        /*]]>*/</script>

    {% include '@Chart/template/_partials/plotly-chart.twig' with {
        chartType: chartType,
        layout: chart.layout,
        data: chart.data
    } %}

{% endif %}
