{% extends template('page-layout-login', 'CustomerPage') %}

{% block content %}
    {% embed organism('section') with {
        title: 'customer.password.restore' | trans,
        modifiers: ['center', 'last'],
        innerClass: 'col col--sm-12 col--md-9 col--lg-6'
    } only %}
        {% block inner %}
            {% include molecule('form') with {
                class: 'box',
                data: {
                    form: _view.form,
                    submit: {
                        enable: true,
                        class: 'button button--big'
                    },
                    cancel: {
                        enable: true,
                        url: url('login'),
                        class: 'button button--hollow button--big',
                        text: 'general.cancel.button' | trans,
                        icon: null
                    }
                }
            } only %}
        {% endblock %}
    {% endembed %}
{% endblock %}
