{% extends molecule('delivery-information', '@SprykerShop:CustomerPage') %}

{% define config = {
    tag: 'div',
} %}

{% block class %}{{ parent() }}{% endblock %}

{% block body %}
    <h4 class="{{ config.name }}__title grid grid--justify grid--middle">
        <span class="col">{{ data.carrierName }}</span>

        {% include atom('icon') with {
            class: 'col',
            modifiers: [data.carrierName | lower ~ '-logo'],
            data: {
                name: data.carrierName | lower ~ '-logo',
            },
        } only %}
    </h4>

    <div class="{{ config.name }}__content grid grid--justify">
        <div class="col">{{ data.methodName }}</div>
        <div class="col">{{ data.storeCurrencyPrice | money(true, data.currencyIsoCode) }}</div>
    </div>
{% endblock %}
