{% extends model('component') %}

{% define config = {
    name: 'order-detail-item',
} %}

{% define data = {
    title: required,
    method: null,
    address: null,
    iconName: null,
} %}

{% block body %}
    <h4 class="{{ config.name }}__title">{{ data.title }}</h4>

    {% if data.method %}
        <span class="{{ config.name }}__method">
            {{ 'customer.order.with_method' | trans }} {{ data.method | capitalize }}
        </span>
        {% if data.iconName %}
            {% include atom('icon') with {
                modifiers: [data.iconName ~ '-logo-small'],
                data: {
                    name: data.iconName ~ '-logo',
                },
            } only %}
        {% endif %}
    {% endif %}

    {% if data.address %}
        {% include molecule('display-address') with {
            data: {
                address: data.address,
            },
        } only %}
    {% endif %}
{% endblock %}
