{% extends molecule('configured-bundle-product', '@SprykerShop:ConfigurableBundleWidget') %}

{% block image %}
    {% set imageModifiers =  ['small', 'item'] %}

    {{ parent() }}
{% endblock %}

{% block generalInformation %}
    <div class="col col--sm-12 col--lg-6">
        {% block name -%}
            <h6 class="{{ config.name }}__item-title">{{ data.name }}</h6>
        {%- endblock %}

        {% block sku -%}
            <small class="text-secondary {{ config.name }}__sku">
                {{- 'configured_bundle.item_sku' | trans }} {{ data.sku -}}
            </small>
        {%- endblock %}
    </div>
{% endblock %}

{% block priceInformation %}
    <div class="{{ config.name }}__container col col--sm-12 col--lg-6">
        {% block priceInformationInner %}
            {% block priceCol %}
                <div class="{{ config.name }}__column col col--sm-12 col--lg-4">
                    {% block price %}
                        <strong class="{{ config.name }}__text">
                            {% block priceInner %}
                                {{ parent() }}
                            {% endblock %}

                            {%- block priceTitle -%}{% endblock %}
                        </strong>
                    {% endblock %}
                </div>
            {% endblock %}

            {% block quantityCol %}
                <div class="{{ config.name }}__column {{ config.name }}__column--text-light col col--sm-12 col--lg-5">
                    {% block quantity %}
                        <span class="{{ config.name }}__text">
                            {{ 'configured_bundle.multiplier' | trans }} {{ data.quantity }}
                        </span>
                    {% endblock %}
                </div>
            {% endblock %}

            {% block totalCol %}
                <div class="{{ config.name }}__column col col--sm-12 col--lg-3 col--right">
                    {% block total %}
                        <strong class="{{ config.name }}__text">
                            {% block totalInner %}
                                {{ parent() }}
                            {% endblock %}
                        </strong>

                        {%- block totalTitle -%}{% endblock %}
                    {% endblock %}
                </div>
            {% endblock %}
        {% endblock %}
    </div>
{% endblock %}
