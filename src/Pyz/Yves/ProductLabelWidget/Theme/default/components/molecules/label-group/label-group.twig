{% extends model('component') %}

{% define config = {
    name: 'label-group'
} %}

{% define data = {
    labels: []
}  %}

{% block component %}
    {% if data.labels is not empty %}{{parent()}}{% endif %}
{% endblock %}

{% block body %}

    {% for label in data.labels %}
        <span class="{{ component.renderClass(config.name ~ '__text', modifiers) }} {{ config.name }}__text--{{ label.type }}">{{ label.text }}</span>
    {% endfor %}

{% endblock %}
