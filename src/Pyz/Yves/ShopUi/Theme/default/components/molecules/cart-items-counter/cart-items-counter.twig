{% extends model('component') %}

{% define config = {
    name: 'cart-items-counter',
    tag: 'a'
} %}

{% define data = {
    label: 'global.my-cart' | trans,
    quantity: null
} %}

{% block attributes %}
    {{ parent() }}
    href="{{ url('cart') }}"
{% endblock %}

{% block body %}

    <span class="user-navigation__icon">
        {% include atom('icon') with {
            modifiers: ['cart'],
            data: {
                name: 'cart'
            }
        } only %}
        {% if data.quantity is not empty and data.quantity > 0 %}
            <span class="{{config.name}}__quantity is-hidden-sm-md">{{data.quantity}}</span>
        {% endif %}
    </span>

    <span class="user-navigation__text">{% if data.label is not empty %}{{data.label}} <span class="is-hidden-lg-xxl"> ({{data.quantity}})</span>{% endif %}</span>

{% endblock %}
