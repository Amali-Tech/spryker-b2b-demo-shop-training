{% extends molecule('card') %}

{% define config = {
    name: 'product-card'
} %}

{% define data = {
    name: required,
    abstractId: required,
    url: required,
    imageUrl: required,
    price: required,
    originalPrice: null,
    category: ''
} %}

{% block image %}
    <div class="{{ component.renderClass(config.name ~ '__image-wrap', modifiers) }}">
        {% include atom('thumbnail') with {
            class: 'js-product-color-group__image-' ~ data.abstractId,
            modifiers: ['catalog']|merge(modifiers),
            attributes: {
                alt: data.name,
                src: data.imageUrl,
                title: data.name
            }
        } only %}

        {% block groups %}
            {% widget 'ProductGroupWidget' args [data.abstractId] only %}{% endwidget %}
        {% endblock %}
    </div>
{% endblock %}

{% block content %}
    {% block labels %}
        {% widget 'ProductAbstractLabelWidget' args [data.abstractId] only %}{% endwidget %}
    {% endblock %}

    {% block name %}
        <a class="{{ component.renderClass(config.name ~ '__overlay', modifiers, 'js-product-color-group__link-' ~ data.abstractId) }}" href="{{data.url}}">{{data.name}}</a>
    {% endblock %}

    {% block category %}
        {% if data.category is not empty %}
            <span class="{{ component.renderClass(config.name ~ '__category', modifiers) }}">{{ data.category }}</span>
        {% endif %}
    {% endblock %}

    {% block rating %}
        <div class="{{ config.name }}__rating">
            {% widget 'DisplayProductAbstractReviewWidget' args [data.abstractId] only %}{% endwidget %}
        </div>
    {% endblock %}

    {% block price %}
        {% if can('SeePricePermissionPlugin') %}
            <div class="{{ component.renderClass(config.name ~ '__price', modifiers) }}">
                {% include molecule('price') with {
                    modifiers: ['catalog'],
                    data: {
                        amount: data.price | money,
                        originalAmount: data.originalPrice is empty ? null : (data.originalPrice | money)
                    }
                } only %}
            </div>
        {% endif %}
    {% endblock %}
{% endblock %}

{% block actionsContainer %}{% endblock %}
