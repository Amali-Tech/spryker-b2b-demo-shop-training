{% extends model('component') %}

{% define config = {
    name: 'product-item-image',
} %}

{% define data = {
    name: '',
    image: null,
} %}

{% set modifiers = modifiers | default([]) %}

{% block body %}
    {% if data.image is not empty %}
        {% include atom('thumbnail') with {
            class: 'col ' ~ config.name ~ '__item',
            modifiers: modifiers,
            attributes: {
                alt: data.name,
                src: data.image.externalUrlLarge,
            }
        } only %}
    {% else %}
        <div class="{{ config.name }}__message grid grid--middle grid--center grid--expand">
            <small>{{ 'global.no_image_available' | trans }}</small>
        </div>
    {% endif %}
{% endblock %}
