{% extends model('component') %}

{% define config = {
    name: 'cms-mobile-cutter'
} %}

{%- block class -%}
    {{config.jsName}} {{config.name}}
{%- endblock -%}

{% block body %}
    <div class="{{ component.renderClass(config.name ~ '__container', modifiers) }}">
        {% block content %}{% endblock %}
    </div>

    {% include molecule('toggler-click') with {
        attributes: {
            'target-selector': '.' ~ config.jsName,
            'trigger-selector': '.' ~ config.jsName ~ '__trigger',
            'class-to-toggle': config.name ~ '--full-visible'
        }
    } only %}

    <div class="{{config.name}}__trigger-holder">
        <a href="#" class="button button--hollow button--tight {{config.jsName}}__trigger">
            {{ 'global.show_more' | trans }}
        </a>
    </div>
{% endblock %}
