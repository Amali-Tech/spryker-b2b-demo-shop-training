{% extends model('component') %}

{% define config = {
    name: 'banner',
    tag: 'article'
} %}

{% define data = {
    imageUrl: required,
    link: '',
    content: '',
    btnTitle: ''
} %}

{% set backgroundImage = data.imageUrl is empty ?: 'background-image: url(' ~ data.imageUrl ~ '); ' %}

{% block body %}
    <div class="{{config.name}}__container grid grid--left grid--middle" style="{{backgroundImage}}">
        <div class="col col--sm-12">
            {{ data.content | raw }}
            {% if data.link is not empty %}
                <a href="{{ data.link | trans }}" class="button button--medium button--tight button--hollow button--hollow-second">
                    {% if data.btnTitle is not empty %}
                        {{ data.btnTitle | trans }}
                    {% else %}
                        {{ 'show_more.btn.title' | trans }}
                    {% endif %}
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
