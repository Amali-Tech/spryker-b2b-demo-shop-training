{% extends model('component') %}

{% define config = {
    name: 'status',
    tag: 'span',
} %}

{% define data = {
    label: required,
    status: required,
} %}

{% block class %}
    {% if data.status %}{{ parent() }} {{ config.name }}--{{ data.status }}{% endif %}
{% endblock %}

{% block body %}
    {% if data.status %}
        {{ data.label }}
    {% else %}
        --
    {% endif %}
{% endblock %}
