{% extends model('component') %}

{% define config = {
    name: 'header',
    tag: 'header'
} %}

{% define data = {
    showSearchForm: true,
    showNavigation: true,
    cartQuantity: app['cart.quantity'] | default,
    user: app['user'],
    showUserMenu: not (hideUserMenu | default(false))
} %}

{% block body %}

    <div class="{{ component.renderClass(config.name ~ '__top', modifiers) }}">
        {% include organism('navigation-top') with {
            class: 'grid grid--justify grid--stretch container'
        } only %}
    </div>

    <div class="{{ component.renderClass(config.name ~ '__main', modifiers) }}">
        {% block headerMainContent %}
            <div class="grid grid--middle container">
                <div class="col {{ config.name }}__actions">
                    <div class="grid">
                        <div class="col {{ config.name }}__actions-item">
                            <a href="#" class="link link--alternative js-page-layout-main__side-drawer-trigger">
                                {% include atom('icon') with {
                                    data: {
                                        name: 'bars'
                                    }
                                } only %}
                            </a>
                        </div>
                        <div class="col {{ config.name }}__actions-item header__actions-item--search">
                            <a href="#" class="link link--alternative {{ config.jsName }}__actions-search-trigger">
                                {% include atom('icon') with {
                                    modifiers: ['big'],
                                    data: {
                                        name: 'search'
                                    }
                                } only %}
                            </a>
                        </div>
                    </div>
                </div>

                {% embed molecule('logo') with {
                    class: 'col ' ~  config.name ~ '__logo',
                    modifiers: ['main']
                } only %}
                    {% block mobile %}
                        <span class="{{ config.name ~ '__image ' ~  config.name ~ '__image--mobile'  }}">
                            {% include atom('icon') with {
                                modifiers: modifiersForIcon,
                                data: {
                                    name: 'logo-mobile'
                                }
                            } only %}
                        </span>
                    {% endblock %}
                {% endembed %}

                <div class="col {{ config.name }}__search">
                    {% if data.showSearchForm %}
                        {% embed molecule('search-form') with {
                            class: config.name ~ '__search-form ' ~ config.jsName ~ '__search-form',
                            attributes: {
                                'data-search-id': 'desktop'
                            },
                            embed: {
                                jsTriggerSearchClass: config.jsName ~ '__actions-search-trigger'
                            }
                        } only %}
                            {% block close %}
                                {{ embed.jsTriggerSearchClass }}
                            {% endblock %}
                        {% endembed %}
                    {% endif %}
                </div>

                {% if is_granted('ROLE_USER') %}
                    <div class="col col--right {{ config.name }}__user">
                        <a href="{{ url('customer/overview') }}" class="link link--alternative">
                            {% include atom('icon') with {
                                modifiers: ['big'],
                                data: {
                                    name: 'user'
                                }
                            } only %}
                        </a>
                    </div>
                {% endif %}

                <div class="col col--right {% if is_granted('ROLE_USER') %} {{ config.name }}__user-nav {% endif %}">
                    {% if data.showUserMenu %}
                        {% if is_granted('ROLE_USER') %}
                            {% include molecule('user-navigation') with {
                                data: {
                                    user: data.user,
                                    cartQuantity: data.cartQuantity
                                }
                            } only %}
                        {% else %}
                            <a href="{{ url('login') }}" class="button button--tight button--font-size-changer {{ config.name }}__login">{{ 'customer.please_login'|trans }}</a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        {% endblock %}
    </div>

    {% if data.showNavigation %}
        <div class="{{config.name}}__navigation">
            <div class="container">
                {% widget 'NavigationWidget' args ['MAIN_NAVIGATION', 'navigation-main'] only %}{% endwidget %}
            </div>
        </div>
    {% endif %}

    {% include molecule('toggler-click') with {
        attributes: {
            'trigger-selector': '.' ~ config.jsName ~ '__actions-search-trigger',
            'target-selector': '.' ~ config.jsName ~ '__search-form',
            'class-to-toggle': config.name ~ '__search-form--active',
            'toggle-overlay-modifiers': 'no-search, no-search',
            'click-outside': 'hide-class'
        }
    } only %}
{% endblock %}
