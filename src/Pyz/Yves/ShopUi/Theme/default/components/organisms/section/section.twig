{% extends model('component') %}

{% define config = {
    name: 'section',
    tag: 'section'
} %}

{% define data = {
    title: false,
    modifiers: [],
    innerClass: ''
} | merge(data | default({})) %}

{% block body %}
    <div class="{{ config.name }}__inner {{ innerClass }}">
        {% if title %}
            <h2 class="{{ config.name }}__title">{{ title }}</h2>
        {% endif %}

        {% block inner %}{% endblock %}
    </div>
{% endblock %}
