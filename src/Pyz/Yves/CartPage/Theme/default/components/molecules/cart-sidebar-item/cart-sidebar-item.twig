{% extends model('component') %}

{% define config = {
    name: 'cart-sidebar-item',
} %}

{% define data = {
    title: '',
    cart: required,
    transformedCartItems: [],
    isQuoteValid: false,
    isQuoteEditable: false,
    isAccordionItem: true,
    accordionItemClass: '',
    accordionIconClass: '',

} %}

{% block body %}
    {% block title %}
        <h5 class="{{ config.name }}__title
            {% block titleClasses %}
                {% if data.isAccordionItem %}
                    {{ config.jsName }}__title {{ data.accordionItemClass }}
                {% endif %}
            {% endblock %}"
            {% block titleAttributes %}{% endblock %}
        >
            {% block titleText %}
                {{ data.title }}
            {% endblock %}
            {% block icon %}
                {% if data.isAccordionItem %}
                    <span class="icon icon--toggler-cross {{ data.accordionIconClass }}"></span>
                {% endif %}
            {% endblock %}
        </h5>
    {% endblock %}
    {% block content %}
        <div class="{{ config.name }}__content
            {% block contentClasses %}
                is-hidden
            {% endblock %}
        ">
            {% block contentInner %}{% endblock %}
        </div>
    {% endblock %}
{% endblock %}
