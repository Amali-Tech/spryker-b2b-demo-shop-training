{% extends model('component') %}

{% define config = {
    name: 'cart-sidebar-item',
} %}

{% define data = {
    title: '',
} %}

{% block attributes %}{% endblock %}

{% block body %}
    {% block title %}
        <h5 class="{{config.name}}__title {{config.name}}__trigger {% block titleClasses %}toggler-accordion__item{% endblock %}">
            {% block titleText %}
                {{ data.title }}
            {% endblock %}
            {% block icon %}
                <span class="icon icon--toggler-cross toggler-accordion__icon"></span>
            {% endblock %}
        </h5>
    {% endblock %}
    {% block content %}
        <div class="{{config.name}}__content {{config.jsName}}__content-share-by-link-widget {% block contentClasses %}is-hidden{% endblock %}">
            {% block contentInner %}{% endblock %}
        </div>
    {% endblock %}
{% endblock %}
