{% extends model('component') %}

{% define config = {
    name: 'cart-sidebar-item',
} %}

{% define data = {
    title: '',
    cart: required,
    transformedCartItems: [],
    isQuoteValid: false,
    isQuoteEditable: false,
} %}

{% block class %}
    {{ parent() }} {{ config.jsName }}
{% endblock %}

{% block attributes %}{% endblock %}

{% block body %}
    {% block title %}
        <h5 class="{{config.name}}__title {{config.jsName}}__trigger {% block titleClasses %}{{config.jsName}}__trigger toggler-accordion__item{% endblock %}" {% block titleAttributes %}{{component.renderAttributes(attributes)}}{% endblock %}>
            {% block titleText %}
                {{ data.title }}
            {% endblock %}
            {% block icon %}
                <span class="icon icon--toggler-cross toggler-accordion__icon"></span>
            {% endblock %}
        </h5>
    {% endblock %}
    {% block content %}
        <div class="{{config.name}}__content {% block contentClasses %}is-hidden{% endblock %}">
            {% block contentInner %}{% endblock %}
        </div>
    {% endblock %}
{% endblock %}
