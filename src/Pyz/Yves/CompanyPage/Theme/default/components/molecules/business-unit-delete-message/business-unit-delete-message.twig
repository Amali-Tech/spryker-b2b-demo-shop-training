{% extends model('component') %}

{% define config = {
    name: 'business-unit-delete-message',
    tag: 'div'
} %}

{% define data = {
    companyBusinessUnit: required
} %}

{% block body %}
    {{ "company.business_unit.delete.message.text" | trans }}:  <strong>{{ data.companyBusinessUnit.name }}</strong><br><br>
    <div>
        <a href="{{ url('company/business-unit/update', {'id': data.companyBusinessUnit.idCompanyBusinessUnit}) }}" class="button button--hollow">
            {{ "company.company_business_unit.delete.confirmation.back" | trans }}
        </a>
        <a href="{{ url('company/business-unit/delete', {'id': data.companyBusinessUnit.idCompanyBusinessUnit}) }}" class="button button--alert">
            {{ "company.account.business_unit.delete" | trans }}
        </a>
    </div>
{% endblock %}
