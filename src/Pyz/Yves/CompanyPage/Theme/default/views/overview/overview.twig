{% extends template('page-layout-company', 'CompanyPage') %}


{% define data = {
    title: null,
    company: _view.company | default(false),
    defaultBillingAddress: _view.defaultBillingAddress | default(false)
} %}

{% block companyContent %}
    {% if data.company is not empty %}
        {% include molecule('tile', 'ShopUi') with {
            data: {
                icon: 'office',
                title: 'company.account.name' | trans,
                text: data.company.name
            }
        } only %}
    {% endif %}

    {% if data.defaultBillingAddress is not empty %}
        {% set mainAddress = data.defaultBillingAddress %}
        {% set fullAddress = mainAddress.address1 ~ ' ' ~ mainAddress.address2 ~ ' ' ~ mainAddress.zipCode ~ ' ' ~ mainAddress.city ~ ' ' ~ ('countries.iso.' ~ mainAddress.iso2code) | trans %}

        {% include molecule('tile', 'ShopUi') with {
            data: {
                icon: 'marker',
                title: 'company.account.address' | trans,
                text: fullAddress
            }
        } only %}
    {% endif %}
{% endblock %}
