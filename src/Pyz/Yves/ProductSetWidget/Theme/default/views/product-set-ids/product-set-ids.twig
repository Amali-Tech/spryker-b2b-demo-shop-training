{% extends template('widget') %}

 {% define data = {
     productSetList: _widget.productSetList
 } %}

{% block body %}
    {% if data.productSetList is defined %}
        {% for productSet in data.productSetList %}
            {% include organism('product-set-details', 'ProductSetWidget') with {
                data: {
                    products: productSet.productViews,
                    name: productSet.productSet.name,
                    description: productSet.productSet.description,
                    images: productSet.productSet.imageSets.0.images | default([])
                }
            } only %}
        {% endfor %}
    {% endif %}
{% endblock %}
