{% extends template('page-layout-main') %}

{% block pageInfo %}{% endblock %}

{% block contentTop %}
    {% include organism('jumbotron-slider') with {
        class: 'spacing-bottom--big',
        data: {
            slides: [{
                imageUrl: '/assets/images/section-slider-item-image-10@2x.jpg',
                link: 'jumbotron.smart_watches.link',
                cmsBlockName: 'Main slide-1',
                btnTitle: 'main_slider.btn.title'
            },
                {
                    imageUrl: '/assets/images/section-slider-item-image-6@2x.jpg',
                    link: 'jumbotron.smartphones.link',
                    cmsBlockName: 'Main slide-2',
                    btnTitle: 'main_slider.btn.title'
                },
                {
                    imageUrl: '/assets/images/section-slider-item-image-7@2x.jpg',
                    link: 'jumbotron.tablets.link',
                    cmsBlockName: 'Main slide-3',
                    btnTitle: 'main_slider.btn.title'
                }
            ]
        },
        attributes: {
            'data-json': '{
                            "slidesToShow": 1,
                            "dots": true,
                            "autoplay": true,
                            "nextArrow": false,
                            "prevArrow": false,
                            "autoplaySpeed": 4000,
                            "centerMode": true,
                            "centerPadding": "240px",
                            "responsive": [{
                                "breakpoint": 1600,
                                "settings": {
                                    "centerPadding": "130px"
                                }
                            },
                            {
                                "breakpoint": 1200,
                                "settings": {
                                    "centerPadding": "40px"
                                }
                            },
                            {
                                "breakpoint": 770,
                                "settings": {
                                    "centerPadding": "12px",
                                    "autoplay": false
                                }
                            }
            ]}'
        }
    } only %}
{% endblock %}

{% block content %}

    <section class="common-section spacing-top--inner spacing-top--big ">
        {{ spyCmsBlock({
            name: 'Featured Products'
        }) }}
    </section>

    <section class="common-section common-section--full-width spacing-top--inner spacing-top--big">
        {{ spyCmsBlock({
            name: 'Featured Categories'
        }) }}
    </section>

{% endblock %}

{% block contentBottom %}
    <section class="common-section common-section--bg-dark">
        <div class="container">
            {{ spyCmsBlock({
                name: 'Top Seller'
            }) }}
        </div>
    </section>

    <section class="common-section">
        <div class="container">
            {{ spyCmsBlock({
                name: 'Teaser for home page'
            }) }}
        </div>
    </section>
{% endblock %}
