{% extends template('page-layout-main') %}

{% block pageInfo %}{% endblock %}

{% block contentTop %}
    {% embed molecule('slick-carousel') with {
        class: 'spacing-bottom spacing-bottom--big',
        modifiers: ['jumbotron'],
        data: {
            slides: [{
                imageUrl: '/assets/images/section-slider-item-image-10@2x.jpg',
                link: 'main_slider_1.url',
                cmsBlockName: 'Main slide-1',
                btnTitle: 'main_slider.btn.title'
            },{
                imageUrl: '/assets/images/section-slider-item-image-6@2x.jpg',
                link: 'main_slider_2.url',
                cmsBlockName: 'Main slide-2',
                btnTitle: 'main_slider.btn.title'
            },{
                imageUrl: '/assets/images/section-slider-item-image-7@2x.jpg',
                link: 'main_slider_3.url',
                cmsBlockName: 'Main slide-3',
                btnTitle: 'main_slider.btn.title'
            }]
        },
        attributes: {
            'slider-config': '{
                "slidesToShow": 1,
                "dots": true,
                "autoplay": true,
                "nextArrow": false,
                "prevArrow": false,
                "autoplaySpeed": 4000,
                "centerMode": true,
                "centerPadding": "240px",
                "responsive": [{
                     "breakpoint": 1600,
                     "settings": {
                         "centerPadding": "130px"
                     }
                },
                {
                    "breakpoint": 1200,
                    "settings": {
                        "centerPadding": "40px"
                    }
                },
                {
                    "breakpoint": 770,
                    "settings": {
                        "centerPadding": "12px",
                        "autoplay": false
                    }
                },
                {
                    "breakpoint": 375,
                    "settings": {
                        "centerMode": false,
                        "autoplay": false
                    }
                }]
            }'
        }
    } only %}
        {% block slides %}
            {% for slide in data.slides %}
                {% include molecule('jumbotron') with {
                    data: {
                        imageUrl: slide.imageUrl,
                        link: slide.link,
                        cmsBlockName: slide.cmsBlockName,
                        btnTitle: slide.btnTitle
                    }
                } only %}
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}

    {% embed organism('section') with {
        modifiers: ['secondary', 'no-mobile-bottom-indent'],
        class: 'spacing-top spacing-top--inner spacing-top--big'
    } only %}
        {% block inner %}
            {{ spyCmsBlock({
                name: 'Featured Products'
            }) }}
        {% endblock %}
    {% endembed %}

    {% embed organism('section') with {
        modifiers: ['secondary', 'full-width'],
        class: 'spacing-top spacing-top--inner spacing-top--big'
    } only %}
        {% block inner %}
            {{ spyCmsBlock({
                name: 'Featured Categories'
            }) }}
        {% endblock %}
    {% endembed %}

{% endblock %}

{% block contentBottom %}
    {% embed organism('section') with {
        modifiers: ['secondary', 'bg-dark'],
        data: {
            innerClass: 'container'
        }
    } only %}
        {% block inner %}
            {{ spyCmsBlock({
                name: 'Top Sellers'
            }) }}
        {% endblock %}
    {% endembed %}

    {% embed organism('section') with {
        modifiers: ['secondary'],
        data: {
            innerClass: 'container'
        }
    } only %}
        {% block inner %}
            {% embed molecule('content-collapser') only %}
                {% block content %}
                    {{ spyCmsBlock({
                        name: 'Teaser for home page'
                    }) }}
                {% endblock %}
            {% endembed %}
        {% endblock %}
    {% endembed %}

{% endblock %}
