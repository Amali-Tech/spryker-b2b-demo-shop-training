{% extends model('component') %}

{% define config = {
    name: 'agent-control-item'
} %}

{# @deprecated data.status. Use data.title instead. #}
{% define data = {
    status: required,
    title: data.status,
    buttonLink: required,
    buttonName: required,
    firstName: '',
    lastName: '',
} %}

{% block body %}
    <div class="col {{ config.name }}__info">
        {{ data.title }}
        <div class="{{ config.name }}__name">{{ data.firstName }} {{ data.lastName }}</div>
    </div>
    <div class="col {{ config.name }}__button-wrap">
        <a href="{{ data.buttonLink }}" class="button button--hollow button--big">{{ data.buttonName }}</a>
    </div>
{% endblock %}
