{% extends template('page-layout-checkout', 'CheckoutPage') %}

{% define data = {
    title: required,
    message: required
} %}

{% block header %}
    {% embed organism('header') only %}
        {% block mobile %}
            <a href="#" class="link link--alt js-page-layout-main__side-drawer-trigger">
                {% include atom('icon') with {
                    modifiers: ['big'],
                    data: {
                        name: 'bars'
                    }
                } only %}
            </a>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block contentClass %}page-layout-main page-layout-main--success{% endblock %}

{% block pageInfo %}{% endblock %}

{% block contentWrap %}
    <div class="container container--checkout-success container--expand spacing-x spacing-x--inner spacing-x--reset">
        {% block content %}
            {% embed molecule('banner') with {
                modifiers: ['color-second', 'success'],
                data: {
                    imageUrl: '/assets/images/img-success.jpg',
                    title: data.title,
                    message: data.message
                }
            } only %}
                {% block body %}
                    <div class="{{config.name}}__container {{config.name}}__container--success grid grid--middle grid--center" style="{{backgroundImage}}">
                        <div class="grid grid--center text-center">
                            <div class="col col--md-10 col--lg-8">
                                {% include atom('icon') with {
                                    modifiers: ['success'],
                                    data: {
                                        name: 'success'
                                    }
                                } only %}
                                {% if data.title is not empty %}
                                    <h1 class="{{ config.name }}__success-title">{{ data.title }}</h1>
                                {% endif %}
                                {% if data.message is not empty %}
                                    <p class="{{ config.name }}__success-text">{{ data.message }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        {% endblock %}
        {% block actions %}
            <div class="container container--checkout">
                <div class="grid grid--gap grid--center">
                    <div class="col col--sm-12 col--lg-auto spacing-bottom">
                        <a href="{{ 'checkout.success.to_orders.url' | trans }}" class="button button--expand button--big">{{ 'checkout.success.to_orders.title' | trans }}</a>
                    </div>
                    <div class="col col--sm-12 col--lg-auto spacing-bottom">
                        <a href="{{ url('') }}" class="button button--expand button--medium button--hollow">{{ 'checkout.success.back_to_home.title' | trans }}</a>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}

{% block footer %}
    {% include organism('footer') only %}
{% endblock %}
